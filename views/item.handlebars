<div>
  <img class="singleItemImage" src="{{data.item.image}}"/>
  <div>
    {{data.item.title}}
  </div>
  <div>
    {{data.item.description}}
  </div>
  {{#if data.user}}
    <form action="/users/{{data.user.username}}/cart" method="POST">
        <input name={{data.item.id}} hidden/>
        <input type="submit" class="submitButton" value="Add to Cart"/>
    </form>
  {{/if}}
  {{#if data.user.isAdmin}}
    {{#when data.item.UserUsername 'eq' data.user.username}}
        <form action="/users/{{data.user.username}}/items/{{data.item.id}}/update-item" method="GET">
          <input type="submit" class="submitButton" value="Update Item"/>
        </form>
        <form method="POST" action="/users/{{data.user.username}}/items/{{data.item.id}}/delete-item">
          <input type="submit" class="submitButton" value="Delete Item"/>
        </form>
    {{/when}}
  {{/if}}
  <form method="GET" action="/items">
    <input type="submit" class="submitButton" value="Return To All Items"/>
  </form>
</div>