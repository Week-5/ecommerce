<div class="signUpDiv">
  <form method="POST" action="/users/{{data.user.username}}/create-item">
    <label class="labelText" style="font-size: xx-large;">Create New Item</label><br>
    <label class="itemDescriptionStyle">Fill out all the fields to add an item to your store!</label>
    <p>
      {{!-- <label class="labelText">Name </label> --}}
      <input class="inputField" type="text" name="title" placeholder="enter item name" required/>
    </p>
    <p>
      {{!-- <label class="labelText">Stock </label> --}}
      <input class="inputField" type="number" name="stock" placeholder="enter how many" required/>
    </p>
    <p>
      {{!-- <label class="labelText">Price </label> --}}
      <input class="inputField" type="number" step="0.01" min="0" name="price" placeholder="enter price" required/>
    </p>
    <p>
      {{!-- <label class="labelText">Description </label> --}}
      <input class="inputField" type="text" name="description" placeholder="enter item description" required/>
    </p>
    <p>
      {{!-- <label class="labelText">Category </label> --}}
      <select class="categorySelect" name="category"/ required>
        <option value="default">select a category</option>
        <option value="Electronics">Electronics</option>
        <option value="Men's Clothing">Men's Clothing</option>
        <option value="Women's Clothing">Women's Clothing</option>
        <option value="Jewelry">Jewelry</option>
      </select>
    </p>
    <p>
      {{!-- <label class="labelText">Image Link </label> --}}
      <input class="inputField" type="text" name="image" placeholder="enter image URL" required/>
    </p>
      <input class="submitButton" type="submit" name="createUser" value="Create Item" required/>
    </p>
  </form>
</div>
<section>
  <div style="text-align: center; margin: auto; padding-top:25px;">
    <form action="/users/{{data.user.username}}" method="GET">
      <input class="submitButton" type="submit" value="Return To Profile"/>
    </form> 
  </div>
</section>
